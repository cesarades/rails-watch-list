<h1><%= @list.name %></h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>: <%= bookmark.movie.overview %>
      <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { :confirm => "You sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add movie', new_list_bookmark_path(@list) %>
<br>
<%= link_to 'Back', lists_path %>
