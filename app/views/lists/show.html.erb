<h1><%= @list.name %></h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>: <%= bookmark.movie.overview %>
      <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { :confirm => "You sure?" } %>
    </li>
  <% end %>
</ul>

<%= render 'bookmarkform', list: @list, bookmark: @bookmark %>
<br>
<%= link_to 'Back', lists_path %>
