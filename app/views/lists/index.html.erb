<%= render 'banner', image_url: 'https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1951&q=80', h1: 'Movie Lists', h2: 'Wishlists, favorites, genres and more ' %>

<%= link_to 'Add List', new_list_path, class: 'btn btn-flat btn-lg btn-block'%>

<div class="cards m-3">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
</div>
